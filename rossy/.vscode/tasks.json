{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",                  // Adds debug symbols (REQUIRED)
                "-std=c99",
                "-Wall",
                "${workspaceFolder}/main.c",
                "${workspaceFolder}/mpc.c",
                "${workspaceFolder}/eval.c",
                "${workspaceFolder}/env.c",
                "-o",
                "${workspaceFolder}/rossy",
                "-ledit",              // Linker flags must usually follow source files
                "-lm"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Builds the rossy executable with debug symbols."
        }
    ]
}